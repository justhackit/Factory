<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="fill_parent"
	android:layout_height="fill_parent">
	<Button android:id="@+id/addEvent_homescreen_btn" android:text="Add a new event" android:textStyle="bold"
	android:layout_weight="1" android:drawableLeft="@drawable/add"
		android:layout_width="fill_parent" android:layout_height="wrap_content" />
	<Button android:id="@+id/viewEvent_homescreen_btn" android:text="View events" android:textStyle="bold"
	android:layout_weight="1" android:drawableLeft="@drawable/view"
		android:layout_width="fill_parent" android:layout_height="wrap_content" />
	<Button android:id="@+id/DeleteEvent_homescreen_btn" android:text="Delete an event" android:textStyle="bold"
	android:layout_weight="1" android:drawableLeft="@drawable/delete"
		android:layout_width="fill_parent" android:layout_height="wrap_content" />
</LinearLayout>