<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="fill_parent"
	android:layout_height="fill_parent">
	<TextView android:id="@+id/eventActiveName"
		android:layout_width="wrap_content" android:layout_height="wrap_content"
		android:layout_marginLeft="10px" android:layout_marginBottom="15px"
		android:textSize="22sp" android:textColor="#ee7620" android:textStyle="bold" />		
	<Button android:id="@+id/doneBtn" android:text="Event Completed,Thanks!"
	    android:gravity="center"
		android:layout_width="fill_parent" android:layout_height="wrap_content" />
	
	<Spinner android:id="@+id/remind_after_spinner"
		android:layout_width="match_parent" 
		android:layout_height="wrap_content" android:drawSelectorOnTop="true"
		android:prompt="@string/remind_after_spinner_prompt" />
</LinearLayout>