<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    >
<!-- Title TextView -->
<TextView  
    android:layout_width="fill_parent" 
    android:layout_height="wrap_content" 
    android:gravity="center"
    android:textSize="30sp"
    android:layout_margin="10dp"
    android:text="Away Message"
    />
<!-- Text Counter TextView -->
<TextView android:layout_width="wrap_content"
	android:layout_height="wrap_content"
	android:layout_gravity="right"
	android:id="@+id/textCount" android:text="000"
	android:layout_marginRight="10dp"
	/>    
<!-- Status EditText -->
<EditText android:layout_width="fill_parent"
	android:layout_height="fill_parent"
	android:hint="Enter your Away message here..."
	android:layout_weight="1"	
	android:id="@+id/editText"
	android:gravity="top|center_horizontal"
	/>    
		<Button android:id="@+id/clearText_btn" android:text="Clear Text" 
	android:layout_width="fill_parent" android:layout_height="wrap_content" />
<!-- Update Button -->
		<ToggleButton android:id="@+id/togglebutton" 		
			android:layout_width="fill_parent" android:layout_height="wrap_content" android:textStyle="bold"
			android:textOn="Tap to DeActivate" android:textOff="Tap to Activate" />

	</LinearLayout>